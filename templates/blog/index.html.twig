{% extends 'base_blog.html.twig' %}

{% block title %}Hello BlogController!
{% endblock %}

{% block body %}

	<div class="container-fluid">
		<div class="row">

			<div class="col">

				<h1 style="text-align:center;margin-top:30px;text-transform:uppercase;font-family: 'Koulen', cursive;font-size:70px;letter-spacing: 5px;color:#262626;">
					Mes articles
				</h1>

				<div class="row" style="width:1100px;">
					{% for article in articles %}

						<div class="card col-md-8" style="margin-top:30px;width:310px;margin-left:35px;">
							<div
								class="bg-image hover-overlay ripple" data-mdb-ripple-color="light">
								{# <img src="/assets/blog/images/{{ article.image }}" class="img-fluid"/> #}
								<a href="#!">
									<div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
								</a>
							</div>
							<div class="card-body">
								<h3 class="card-title text-info">{{ article.title}}</h3>
								<br>
								<p>
									Par
									{{ article.author }},
																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																									
																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																le
									{{ article.createdAt | date("d/m/Y") }}
								</p>


								<a href="{{ path('show', {'id':article.id})}}" class="btn btn-dark" style="font-size:15px;letter-spacing:3px;font-family: 'Koulen', cursive;">Lire</a>

							</div>
						</div>

					{% endfor %}
				</div>
			</div>

			<div class="col">
				<h2 style="margin-top:75px;margin-left:15px;text-transform:uppercase;font-family: 'Koulen', cursive;font-size:40px;letter-spacing: 5px;color:#262626;">
					Categories
					<i class="fas fa-level-down-alt text-info"></i>
				</h2>
				<ul class="list-group" style="margin-top:30px;width:300px;">
					{% for category in categories %}
						<li class="list-group-item d-flex justify-content-between align-items-center" style="border-radius:1px;border: solid 2px #262626;">

							<a href="{{ path('show_article', {id:category.id}) }}" style="color:#262626;text-decoration:none;font-family: 'Koulen', cursive;font-size:20px;cursor:pointer;">
								<i class="fas fa-caret-right text-info" style="margin-right:5px;"></i>
								{{ category.title }}
							</a>
							<span class="badge badge-info badge-pill" style="padding:10px;">
								{{ category.articles | length }}
								article(s)
							</span>
						</li>
						<br>

					{% endfor %}
				</ul>
			</div>

		</div>
		<br><br></div>
	<style>
		.date {
			font-style: italic;
		}
		.card {
			border: solid 2px #262626 !important;
			border-radius: 3px !important;
		}
	</style>
{% endblock %}
