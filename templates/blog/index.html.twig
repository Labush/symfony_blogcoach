{% extends 'base_blog.html.twig' %}

{% block title %}Hello BlogController!
{% endblock %}

{% block body %}

	<div class="container mt-5">
		<h1 style="text-align:center;margin-top:30px;text-transform:uppercase;font-family: 'Koulen', cursive;font-size:70px;letter-spacing: 5px;color:#262626;">Mes articles</h1>

		<div class="row">
			{% for article in articles %}

				<div class="card col-md-4" style="margin-top:30px;width:610px;margin-left:35px;">
					<div
						class="bg-image hover-overlay ripple" data-mdb-ripple-color="light">
						{# <img src="{{ article.image }}" alt="{{ article.image }}" class="img-fluid"/> #}
						<a href="#!">
							<div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
						</a>
					</div>
					<div class="card-body">
						<h5 class="card-title text-info">{{ article.title}}
						</h5>
						<p class="date">Publié le
							{{ article.createdAt | date("d/m/Y") }}
							à
							{{ article.createdAt | date("H:i") }}
						</p>
						<a href="{{ path('show', {'id':article.id})}}" class="btn btn-dark">En savoir plus</a>
					</div>
				</div>

			{% endfor %}

		</div>
	</div>

	<style>
		.date {
			font-style: italic;
		}
		.card {
			border: solid 2px #262626 !important;
			border-radius: 3px !important;
		}
	</style>
{% endblock %}
